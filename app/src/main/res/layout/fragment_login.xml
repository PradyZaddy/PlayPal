<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/fragment_layout"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/welcomeBackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Welcome Back"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/signInLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:text="sign in to access your account"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:paddingLeft="12dp"
        android:ems="10"
        android:background="@drawable/input_layout"
        android:inputType="text"
        android:layout_marginBottom="25dp"
        android:hint="Enter your email" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:paddingLeft="12dp"
        android:ems="10"
        android:background="@drawable/input_layout"
        android:inputType="textPassword"
        android:hint="Enter your password" />

    <TextView
        android:id="@+id/otherOptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="or sign in with" />

    <ImageView
        android:id="@+id/googleIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/googleicon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_layouts"
        android:text="Log In" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/hasAccountOptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Don't have an account? " />

        <TextView
            android:id="@+id/signupOptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="sign up "
            android:textColor="#4BAC3A"
            android:layout_marginBottom="100dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>