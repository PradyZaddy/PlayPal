<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_layout"
    android:padding="10dp"
    android:layout_margin="10dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:background="@drawable/image_layout"
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@drawable/profilepicture" />





        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oleh" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="\@big_0_notation"
                    android:textColor="#999999" />

            </LinearLayout>
            <TextView
                android:id="@+id/userDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Top Weirdo Canada 2025"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/gameTitle"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Table Tennis" />

            <TextView
                android:id="@+id/gameTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:text="30 March, 1:00pm (Sunday)" />

            <TextView
                android:id="@+id/gameLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:text="Riverside Park" />
        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:gravity="right">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="38dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:contentDescription="normal photo"
            android:src="@drawable/closeicon"
            tools:ignore="TouchTargetSizeCheck" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="65dp">

    <ImageView
        android:id="@+id/createPostButton"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:contentDescription="normal photo"
        android:src="@drawable/save"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/yesButton"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:contentDescription="normal photo"
        android:src="@drawable/checkmark"
        tools:ignore="TouchTargetSizeCheck" />
</LinearLayout>

</LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>


</LinearLayout>